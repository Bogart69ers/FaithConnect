@model FaithConnect.ViewModel.GroupDetailViewModel

@{
    ViewBag.Title = Model.Group.groupName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Assets/Groups/css/GroupDetail.css" />

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="group-header" style="position: relative;">
                <img src="~/Assets/Groups/img/group-header.jpg" alt="Group header" class="img-fluid">
                <div class="group-info" style="position: absolute; bottom: 10px; left: 20px;">
                    <h2>@Model.Group.groupName</h2>
                    <p>100 members</p>
                    <button class="btn btn-success">Join Group</button>
                </div>
            </div>
        </div>
    </div>

    <ul class="nav nav-tabs mt-3">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#content">Contents</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#events">Events</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#forums">Forums</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane container active" id="content">
            <!-- Content posts go here -->
            @foreach (var post in Model.Posts)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            @*<img src="~/Assets/Users/img/@post.UserAccount.profilePicture" alt="@post.UserAccount.username" class="rounded-circle" style="width: 50px; height: 50px;">*@
                            <div class="ml-3">
                                <h5>@post.UserAccount.username <small class="text-muted">(@post.UserAccount.role)</small></h5>
                                <p class="text-muted">@post.date_created?.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <p class="mt-3">@post.content</p>
                        @if (post.Media.Any())
                        {
                            @*<img src="~/Assets/Posts/@post.Media.First().url" alt="Post image" class="img-fluid">*@
                        }
                        <div class="mt-3">
                            <button class="btn btn-link">Like</button>
                            <button class="btn btn-link">Interact</button>
                            <button class="btn btn-link">Repost</button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="tab-pane container fade" id="events">
            <!-- Events go here -->
            @foreach (var ev in Model.Events)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <h5>@ev.title</h5>
                        <p>@ev.description</p>
                        <p><strong>Date:</strong> @ev.event_date?.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>
            }
        </div>

        <div class="tab-pane container fade" id="forums">
            <!-- Forums go here -->
            @foreach (var forum in Model.Forums)
            {
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            @*<img src="~/Assets/Users/img/@forum.UserAccount.profilePicture" alt="@forum.UserAccount.username" class="rounded-circle" style="width: 50px; height: 50px;">*@
                            <div class="ml-3">
                                @*<h5>@forum.UserAccount.username <small class="text-muted">(@forum.UserAccount.role)</small></h5>*@
                                <p class="text-muted">@forum.date_created?.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <p class="mt-3">@forum.content</p>
                        <div class="mt-3">
                            <button class="btn btn-link">Like</button>
                            <button class="btn btn-link">Interact</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12 col-md-4 offset-md-8">
            <div class="card">
                <div class="card-body">
                    <h5>Upcoming Events:</h5>
                    @foreach (var ev in Model.Events)
                    {
                        <div class="d-flex justify-content-between mt-2">
                            <div>
                                <p class="mb-0">@ev.title</p>
                                <small class="text-muted">@ev.event_date?.ToString("dddd, MMMM dd")</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

