@{
    ViewBag.Title = "Approval";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="page-inner">
        <div class="page-header">
            <h4 class="page-title">Content Approval</h4>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a href="/Admin/AdminDashboard">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="flaticon-right-arrow"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Manage</a>
                </li>
                <li class="separator">
                    <i class="flaticon-right-arrow"></i>
                </li>
                <li class="nav-item">
                    <a href="/Admin/Approval">Content Approval</a>
                </li>
            </ul>
        </div>

        <div class="row">
            <!-- Content Approval List -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Pending Content</div>
                    </div>
                    <div class="card-body">
                        <table id="contentApprovalTable" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Date Submitted</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @* Example row, replace with dynamic data *@
                                <tr>
                                    <td>1</td>
                                    <td>Sample Content Title</td>
                                    <td>Author Name</td>
                                    <td>2024-07-22</td>
                                    <td><span class="badge badge-warning">Pending</span></td>
                                    <td>
                                        <a href="/Admin/Approval/Approve/1" class="btn btn-success btn-sm">
                                            <i class="fas fa-check"></i> Approve
                                        </a>
                                        <a href="/Admin/Approval/Reject/1" class="btn btn-danger btn-sm">
                                            <i class="fas fa-times"></i> Reject
                                        </a>
                                        <a href="/Admin/Approval/View/1" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                                @* Repeat for each pending content *@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- DataTables initialization -->
<script>
    $(document).ready(function() {
        $('#contentApprovalTable').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>
