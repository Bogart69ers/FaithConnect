@model FaithConnect.Repository.ManageAccountViewModel

@{
    ViewBag.Title = "AdminDashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper">
    <div class="container" style="margin-top: 70px;">
        <div class="page-inner">
            <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
                <div>
                    <h3 class="fw-bold mb-3">Dashboard</h3>
                </div>
                <div class="ms-md-auto py-2 py-md-0">
                    <a href="~/Admin/Approval" class="btn btn-round me-2" style="background:rgb(233 219 202); color:#6d6d6d; border-color:transparent">Manage Events</a>
                    <a href="~/Admin/ManageAccount" class="btn btn-round" style="background:rgb(207 185 159); color:#6d6d6d; border-color:transparent">Manage Account</a>
                    <a href="/Admin/GenerateAdminReport" target="_blank" class="btn btn-dark" style="border-radius:20px; background:rgb(233 219 202); color:#6d6d6d; border-color:transparent; margin-left:7px">
                        <i class="fas fa-file-pdf"></i> Generate Report
                    </a>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-md-3">
                    <div class="card card-stats card-round">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-icon">
                                    <div class="text-center icon-big bubble-shadow-small" style="background:rgb(233 219 202); border-color:transparent; color:white; border-radius:5px">
                                        <i class="fas fa-users"></i>
                                    </div>
                                </div>
                                <div class="col col-stats ms-3 ms-sm-0">
                                    <div class="numbers">
                                        <p class="card-category">Total Active Groups</p>
                                        <h4 class="card-title">@Model.Groups.Count()</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="card card-stats card-round">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-icon">
                                    <div class="icon-big text-center bubble-shadow-small" style="background:rgb(207 185 159); border-color:transparent; color:white; border-radius:5px">
                                        <i class="fas fa-users"></i>
                                    </div>
                                </div>
                                <div class="col col-stats ms-3 ms-sm-0">
                                    <div class="numbers">
                                        <p class="card-category">Pending Groups</p>
                                        <h4 class="card-title">@Model.PendingGroups.Count()</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="card card-stats card-round">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-icon">
                                    <div class="icon-big text-center icon-info bubble-shadow-small" style="background:rgb(233 219 202); border-color:transparent; color:white; border-radius:5px">
                                        <i class="fas fa-user-check"></i>
                                    </div>
                                </div>
                                <div class="col col-stats ms-3 ms-sm-0">
                                    <div class="numbers">
                                        <p class="card-category">Active Users</p>
                                        <h4 class="card-title">@Model.UserAccounts.Count()</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="card card-stats card-round">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-icon">
                                    <div class="icon-big text-center icon-primary bubble-shadow-small" style="background:rgb(207 185 159); border-color:transparent; color:white; border-radius:5px">
                                        <i class="fas fa-clipboard-list"></i>
                                    </div>
                                </div>
                                <div class="col col-stats ms-3 ms-sm-0">
                                    <div class="numbers">
                                        <p class="card-category">Total Post</p>
                                        <h4 class="card-title">@Model.Posts.Count()</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-sm-6 col-md-3">
                    <div class="card card-stats card-round">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-icon">
                                    <div class="icon-big text-center icon-secondary bubble-shadow-small" style="background:rgb(233 219 202); border-color:transparent; color:white; border-radius:5px">
                                        <i class="fas fa-clipboard-list"></i>
                                    </div>
                                </div>
                                <div class="col col-stats ms-3 ms-sm-0">
                                    <div class="numbers">
                                        <p class="card-category">Total Events</p>
                                        <h4 class="card-title">@Model.Events.Count()</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="card card-stats card-round">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-icon">
                                    <div class="icon-big text-center icon-info bubble-shadow-small" style="background:rgb(207 185 159); border-color:transparent; color:white; border-radius:5px">
                                        <i class="fas fa-clipboard-list"></i>
                                    </div>
                                </div>
                                <div class="col col-stats ms-3 ms-sm-0">
                                    <div class="numbers">
                                        <p class="card-category">Pending Events</p>
                                        <h4 class="card-title">@Model.PendingEvents.Count()</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="card card-stats card-round">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-icon">
                                    <div class="icon-big text-center icon-primary bubble-shadow-small" style="background:rgb(233 219 202); border-color:transparent; color:white; border-radius:5px">
                                        <i class="fas fa-clipboard-list"></i>
                                    </div>
                                </div>
                                <div class="col col-stats ms-3 ms-sm-0">
                                    <div class="numbers">
                                        <p class="card-category">Approved Events</p>
                                        <h4 class="card-title">@Model.ApprovedEvents.Count()</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>               
            </div>            
            </div>
        </div>
    </div>

